<h1>User profile</h1>

<table class="table table-striped table-dark table-hover">
  <tbody>
    <tr>
      <td><strong>Name: </strong> <%= @user.full_name %></td>
      <td><strong>Email: </strong> <%= @user.email %></td>
      <td><% if current_user.not_friends_with?(@user.id)%>
          <%= link_to 'Follow', friendships_path(friend: @user),  class: "btn btn-success", method: :post %></td>
        <% el1se %>
          <span class="badge badge-secondary">Following</span>
        <% end %>
    </tr>
  </tbody>
</table>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/stocks_list' %>
<% else %>
  <span class="badge badge-secondary">This user is not tracking any stock</span>
<% end %>