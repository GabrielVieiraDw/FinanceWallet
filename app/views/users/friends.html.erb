<h1>Friends</h1>

<h3>Search Friends</h3>
<div class="input-group mb-3">
  <%= form_tag search_friend_path, remote: true, method: :get do %>
    <div class="input-group mb-3">
      <%= text_field_tag :friend, params[:friend], placeholder: "Name or email", class: "form-control form-control-lg" %>
      <div class="input-group-append">
        <%= button_tag type: :submit, class: "input-group-text btn btn-primary" do %>
          <span class="fa-icon"><%= 'Search' %></span>
        <% end %>
      </div>
    </div>
  <% end %>
<div>
<div id="friend_results">
</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>